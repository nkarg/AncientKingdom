@model AncientKingdom.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}

@Styles.Render("~/Content/styleLogin.css")
@Scripts.Render("~/Scripts/prefixfree.min.js")
<audio src="~/Images/Login/ALTINA.mp3" autoplay loop></audio>
<div class="row">
    <div class="body"></div>
    <div class="grad"></div>
    <div class="col-md-5">
        <div class="header">
            <div> Olvidé mi<span> Contraseña </span> </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="login">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })

                <input type="submit" class="btn btn-default" value="Enviar" />

            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
