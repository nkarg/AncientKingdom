
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Highscores!</title>
    @Styles.Render("~/Content/styleHighscores.css", "~/Content/bootstrap.min.css")
</head>
<body>


    <div class="col-md-12 container">
        <div class="col-md-12 title">
            <h3>Highscores!</h3>
        </div>
        <div class="col-md-12 score-container">
            <div id="thief-container" class="game-container">
                <div class="col-md-12"><h3>Ladrón</h3></div>
                <div class="col-md-12">
                    <div class="col-md-4">Username</div>
                    <div class="col-md-4">Vidas</div>
                    <div class="col-md-4">Intentos</div>
                </div>
            </div>
            <div id="wizard-container" class="game-container">
                <div class="col-md-12"><h3>Mago</h3></div>
                <div class="col-md-12">
                    <div class="col-md-4">Username</div>
                    <div class="col-md-4">Vidas</div>
                    <div class="col-md-4">Intentos</div>
                </div>
            </div>
            <div id="warrior-container" class="game-container">
                <div class="col-md-12"><h3>Guerrero</h3></div>
                <div class="col-md-12">
                    <div class="col-md-4">Username</div>
                    <div class="col-md-4">Vidas</div>
                    <div class="col-md-4">Intentos</div>
                </div>
            </div>


            <!-- Dynamic items here -->
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.1.1.js"
            integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="
            crossorigin="anonymous"></script>
</body>
@Scripts.Render("~/Scripts/indexHighscores.js")
</html>
