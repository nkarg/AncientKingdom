            <audio id="mapa" src="~/Images/Map/Trails in the Skies.mp3" controls autoplay loop></audio>

            <div>
                <button class="button" onclick="document.getElementById('mapa').play()">
                    <span class="glyphicons glyphicons-play"></span>Play
