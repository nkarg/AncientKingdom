
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Mapa</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/styleSideBar.css",
        "~/Content/lessSideBar.less", "~/Content/styleMap.css")
    @Scripts.Render("~/Scripts/mapa.js", "~/Scripts/indexSideBar.js")
</head>
<body>
    <div id="wrapper">
        <div class="overlay"></div>
        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#"> Bootstrap 3 </a>
                </li>
                <li><a href="#"><i class="fa fa-fw fa-home"></i> Home</a></li>
                <li><a href="#"><i class="fa fa-fw fa-folder"></i> Page one</a></li>
                <li><a href="#"><i class="fa fa-fw fa-file-o"></i> Second page</a></li>
                <li><a href="#"><i class="fa fa-fw fa-cog"></i> Third page</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-fw fa-plus"></i> Dropdown <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="dropdown-header">Dropdown heading</li>
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#"><i class="fa fa-fw fa-bank"></i> Page four</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-fw fa-dropbox"></i> Page 5</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-fw fa-twitter"></i> Last page</a>
                </li>
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed animated fadeInLeft" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
        </div>
        <div class="container">

            <div>
                <a href="@Url.Content("~/NotFound/Index")"><img src="~/Images/Map/torre.png" style="width:200px; height:170px; top: 360px; right: 10px; position: absolute;" /></a>
            </div>
            <div>
                <a href="@Url.Content("~/Castle/Index")"><img src="~/Images/Map/castle.png" style="width: 297px; height: 198px;top: 210px;left: 650px;position: absolute;" /></a>
            </div>
            <div>
                <a href="@Url.Content("~/NotFound/Index")"><img src="~/Images/Map/city3.png" style="width:174px; height: 147px;top: 300px;left: 400px;position: absolute;" /></a>
            </div>
            <div>
                <a href="@Url.Content("~/NotFound/Index")"><img src="~/Images/Map/city8.png" style="height:210px; width:223px;top: 20px;right: 70px;position: absolute;" /></a>
            </div>
            <div>
                <a href="@Url.Content("~/CityThief/Index")"><img src="~/Images/Map/city6.png" style="height: 120px; width:186px;top: 30px;left: 250px;position: absolute;" /></a>
            </div>
            <div>
                <a href="@Url.Content("~/NotFound/Index")"><img src="~/Images/Map/city5.png" style="height: 135px; width: 213px; top: 550px; left: 600px; position: absolute;" /></a>
            </div>
            <div>
                <button class="button" onclick="document.getElementById('mapa').play()">Play</button>
                <button class="button" onclick="document.getElementById('mapa').pause()">Stop</button>
                <button class="button" onclick="document.getElementById('mapa').volume+=0.1">Mas</button>
                <button class="button" onclick="document.getElementById('mapa').volume-=0.1">Menos</button>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <audio id="mapa" src="~/Images/Map/Trails in the Skies.mp3" controls autoplay loop></audio>
</body>
</html>
