@model AncientKingdom.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

@Styles.Render("~/Content/styleLogin.css")
@Scripts.Render("~/Scripts/prefixfree.min.js")
<audio src="~/Images/Login/Take The Windward!.mp3" autoplay loop></audio>
<div class="row">
    <div class="body"></div>
    <div class="grad"></div>
    <div class="col-md-5">
        <div class="header">
            <div> Nueva<span> Cuenta </span> </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="login">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.Nickname, new { @placeholder = "Nickname" })

                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })

                @Html.PasswordFor(m => m.Password, new { @placeholder = "Contraseña" })

                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirmar contraseña" })

                <input type="submit" class="btn btn-default" value="Register" />

            }
        </div>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
